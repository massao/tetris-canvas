*
	box-sizing: border-box
	margin: 0
	padding: 0

body
	font-family: Helvetica, Arial, sans-serif
	font-size: 16px
	min-width: 320px

.container
	margin: 0 auto;
	max-width: 960px
	width: 90%;

	.page-header
		margin: 10px 0
		padding: 10px 0
		text-align: center

	.controls
		float: left
		margin: 10px auto

	.wrapper-game
		text-align: center
		max-width: 260px
		margin: 10px auto

	#game
		background-color: #3C3C3C
		background-image: url('../images/bg.png')
		border: 5px solid #000
		box-sizing: content-box
		height: 500px
		width: 250px

	.score
		font-weight: bold
		span
			font-weight: normal